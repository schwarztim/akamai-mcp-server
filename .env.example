# Akamai EdgeGrid Authentication Credentials
# Obtain these from Akamai Control Center > Identity & Access Management > Create API Client

AKAMAI_HOST=akab-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-xxxxxxxx.luna.akamaiapis.net
AKAMAI_CLIENT_TOKEN=akab-xxxxxxxxxxxxxxxxxxxxxxxx-xxxxxx
AKAMAI_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AKAMAI_ACCESS_TOKEN=akab-xxxxxxxxxxxxxxxxxxxxxxxx-xxxxxx

# Optional: Account Switch Key (if using multiple accounts)
# AKAMAI_ACCOUNT_KEY=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/akamai-mcp.log

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000
