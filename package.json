{
  "name": "akamai-mcp-server",
  "version": "3.0.0",
  "description": "Enterprise-grade Model Context Protocol server with complete Akamai API coverage via dynamic OpenAPI tool generation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "akamai-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "sync:specs": "node scripts/sync-specs.js",
    "validate": "node scripts/validate-registry.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit && eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky install || true",
    "prebuild": "npm run sync:specs"
  },
  "keywords": [
    "akamai",
    "mcp",
    "model-context-protocol",
    "edgegrid",
    "cdn",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "akamai-edgegrid": "^4.0.0",
    "axios": "^1.7.9",
    "winston": "^3.17.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1",
    "@apidevtools/json-schema-ref-parser": "^11.7.2",
    "glob": "^11.0.0",
    "openapi-types": "^12.1.3",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@types/glob": "^8.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.0",
    "nock": "^14.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
